<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="403dp"
        android:layout_height="114dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="214dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:text="@string/welcome_james_sinyangwe"
        android:textColor="@color/white"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="68dp"
        android:layout_height="83dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"
        app:srcCompat="@drawable/add" />

    <GridLayout
        android:layout_width="404dp"
        android:layout_height="549dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News Feed" />


        <ImageView
            android:layout_width="206dp"
            android:layout_height="292dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/newsfeed" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"/>


        <ImageView
            android:layout_width="198dp"
            android:layout_height="292dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/repot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Report Crime" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"/>


        <ImageView
            android:layout_width="209dp"
            android:layout_height="250dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/missingperson" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Report Missing Person" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
